<p id="notice"><%= notice %></p>

<h5>Posts List</h5>

<table class="table table-striped">
  <thead>
    <tr>
      <th width="20%">Title</th>
      <th width="50%">Body</th>
      <th>Update at</th>
	<% if signed_in? %>
      		<th colspan="2"></th>
	<%end%>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= post.body.truncate(100) %></td>
        <td><%= post.updated_at %></td>
	<% if signed_in? %>
        	<td><%= link_to 'Edit', edit_post_path(post) %></td>
        	<td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<% if signed_in? %>
	<br>
	<%= link_to 'New Post', new_post_path(category_id: @category_id),:class => "btn btn-sm btn-outline-info" %>
<%end%>
